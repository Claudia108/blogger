<h1>Articles Tagged with <%= @tag.name %></h1>

<br>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
    <% end %>
</ul>
<br>
<p><%= link_to "Delete Tag", tag_path(@tag.id), method: :delete, data: {confirm: "Do you really want to delete this tag?"} %></p>
<p><%= link_to "<< Back to the Tags List", tags_path %></p>
